<form method="post" action="/posts/<%=@post.id%>">
  <input id="hidden" type="hidden" name="_method" value ="patch"/>
<ul>
  <li>Name: <input type="text" name="name" value="<%= @post.name %>" /></li>
  <li>Content: <input type="text" name="content" value="<%= @post.content %>"/></li>
  <input type="submit" value="submit" />
</ul>
</form>
